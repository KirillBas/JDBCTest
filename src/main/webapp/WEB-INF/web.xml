        <servlet-name>StorageServlet</servlet-name>
        <url-pattern>/storage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RackServlet</servlet-name>
        <url-pattern>/rack</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
</web-app>